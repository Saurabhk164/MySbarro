rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - deny access
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow read access to background images for everyone
    match /background-images/{imageId} {
      allow read: if true;
    }
    
    // Allow access to date photos
    match /date-photos/{dateId}/{imageId} {
      // Allow read access to everyone
      allow read: if true;
      
      // Allow write only for authenticated users
      allow write: if request.auth != null;
      
      // Optional: could restrict write to only users who created the date
      // allow write: if request.auth != null && 
      //    firestore.get(/databases/(default)/documents/dates/$(dateId)).data.userId == request.auth.uid;
    }
  }
}
